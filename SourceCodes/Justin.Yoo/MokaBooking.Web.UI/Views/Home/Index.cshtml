@{
    ViewBag.Title = "Index";
}
<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <table class="table table-hover" ng-controller="bookingController">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date/Time</th>
                    <th>Guests</th>
                </tr>
            </thead>
            <tbody ng-repeat="booking in bookings">
                <tr>
                    <td>{{booking.givenName}} {{booking.surname}}</td>
                    <td>{{booking.email}}</td>
                    <td>{{booking.bookingDate}}</td>
                    <td>{{booking.numberOfGuests}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>